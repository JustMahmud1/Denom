@model BlogPostDto
@{
	ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-sm-12 col-xl-6">
			<div class="bg-secondary rounded h-100 p-4">
				<h6 class="mb-4">Basic Form</h6>
				<form action="create" method="post" enctype="multipart/form-data">
					<div class="mb-3">
						<label asp-for="Title" class="form-label">Title</label>
						<input asp-for="Title" type="text" placeholder="Title" class="form-control">

					</div>
					<div class="mb-3">
						<label asp-for="File">File</label>
						<input asp-for="File" accept="image/*" class="form-control">
						<span class="text text-danger" asp-validation-for="File"></span>
					</div>
					<div class="form-floating">
						<label asp-for="Description"></label>
						<input asp-for="Description" class="form-control" placeholder="Description here"
								  style="height: 150px;">
					</div>
					<div class="mb-3">
						<label asp-for="Date" class="form-label">Title</label>
						<input asp-for="Date" type="text" placeholder="Date" class="form-control">

					</div>
					<div class="mb-3 form-check">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						<label class="form-check-label" for="exampleCheck1">Check me out</label>
					</div>
					<button type="submit" class="btn btn-primary">Create</button>
				</form>
			</div>
		</div>
	</div>
</div>

