@using ProjectDenomHome.Dtos;
@model List<BlogGetDto>
@{
	ViewData["Title"] = "Index";
}

<div class="container m-2 mt-4">
	<div class="col-sm-12 col-xl-12">
		<div class="bg-secondary rounded h-100 p-4">
			<h2 class="mb-1">Manage blogs<span style="margin-left:900px"><a type="button" asp-area="Admin" asp-controller="Blog" asp-action="Create" class="btn btn-outline-success">Create</a></span></h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Title</th>
						<th scope="col">Description</th>
						<th scope="col">Date</th>
						<th scope="col">File(Img)</th>
						<th scope="col">Crud</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">@item.Id</th>
							<td>@item.Title</td>
							<td>@item.Description</td>
							<td>@item.Date</td>
							<td>@item.Image</td>
							<td></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

